<div class="rich-text container--narrow">
    <h2>{{ section.settings.heading }}</h2>
    {{ section.settings.contents }}
    <a href="{{ section.settings.btn_link }}" class="btn_primary">{{ section.settings.btn_text }}</a>
</div>


{%- schema -%}
    {
        "name": "Rich Text",
        "tag": "section",
        "class": "rich-text_wrap",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Text Heading"
            },
            {
                "type": "richtext",
                "id": "contents",
                "label": "Text Contents"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button link"
            }
        ],
        "presets": [
            {
                "name": "Rich Text",
                "settings": {}
            }
        ]
    }
{%- endschema -%}
