<div class="row">
  <div class="blog-section">
    <aside class="sidebar left-sidebar col-xs-12 col-sm-3 col-md-3">
      <div class="sidebar__inner">
        {% render 'blog-sidebar' %}
      </div>
    </aside>
  </div>
  <div class="grid__item col-xs-12 col-sm-9  col-md-9 content-wrapper">
    <div class="blog_masonry_left">
      <div class="blog_content_wrap">as
        {% assign blog_handles = "news-and-articles,laws-regulations" | split: "," %}
        {% for handle in blog_handles %}
          {% for article in blogs.laws-regulations.title %}
            {% if article.tags contains blog_tag %}
              {% assign article_handles = article_handles | append: article.handle | append: "," %}
            {%endif%}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

