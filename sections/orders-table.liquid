<div class="grid">
  <div class="grid-item customer-orders">
    <div>
      
    </div>
    <h2 class="tt-innerpagetitle">{% for tag in customer.tags %}{{ tag }}{% endfor %}</h2>
    
    {% paginate customer.orders by 20 %}
    {% if customer.orders.size != 0 %}
    <table class="full">
      <thead>
        <tr>
          <th>{{ 'customer.orders.order_number' | t }}</th>
          <th>{{ 'customer.orders.date' | t }}</th>
          <th>{{ 'customer.orders.payment_status' | t }}</th>
          <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
          <th>Tracking Link</th>
          <th>{{ 'customer.orders.total' | t }}</th>
        </tr>
      </thead>
      <tbody>
        {% for orders in customer.orders %}
        <tr>
          <td>{{ orders.name | link_to: order.customer_url }}</td>
          <td>{{ orders.created_at | date: "%b %d, %Y" }}</td>
          <td>{{ orders.financial_status_label }}</td>
          <td>{{ orders.fulfillment_status_label }}</td>
          {% for line_item in order.line_items %}
            <a href="{{ line_item.fulfillment.tracking_url }}">#{{ line_item.fulfillment.tracking_number}}</a>
          {% endfor %}
          <td>{{ orders.total_price | money }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    {% else %}
    <p>{{ 'customer.orders.none' | t }}</p>
    {% endif %}
    {% for line_item in order.line_items %}
      <a href="{{ line_item.fulfillment.tracking_url }}">{{ line_item.fulfillment.tracking_company }} #{{ line_item.fulfillment.tracking_number}}</a>
    {% endfor %}
    {% if paginate.pages > 1 %}
    <div class="text-center">
      {% render 'pagination-custom', paginate: paginate %}
    </div>
    {% endif %}
    {% endpaginate %}
  </div>
</div>
{% schema %}
  {
    "name": "Orders Table",
    "settings": [],
    "presets": [
      {
        "name": "Orders Table"
      }
    ]
  }
{% endschema %}