<footer class="footer">
  <div class="footer-head_intro">
    <div class="footer-head_gap">
      <div class="gap_white"></div>
    </div>
    <div class="footer-head_text">
      <h4>{{ section.settings.footer_header }}</h4>
    </div>
  </div>
  <div class="container">
    <div class="footer-logo_text container--narrow">
      <div class="footer-img_logo">
        <a href="/"><img src="{{ section.settings.image_logo | img_url: 'master' }}" /></a>
      </div>
      <div class="footer-text_intro">
        {% include 'info' %}
        {{ section.settings.text_intro }}
      </div>
    </div>
    <div class="footer-links">
      {% for block in section.blocks %}
        <div class="menu_footer_items">
          {% case block.type %}
  
            {% when 'menu' %}  
              <h3>{{ block.settings.menu_heading }}</h3>
              <div class="footer-menu_item">
                {% for link in block.settings.menu.links %}
                  <a href="{{ link.url }}">
                    {{ link.title }}
                  </a>
                {% endfor %}
              </div> 
        
            {% when 'button' %}
              <a class="footer_btn" href="{{ block.settings.btn_link }}">{{ block.settings.btn_text }}</a>
        
          {% endcase %} 
        </div>
      {% endfor %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
      {
        "type": "richtext",
        "id": "footer_header",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "image_logo",
        "label": "Image Logo"
      },
      {
        "type": "richtext",
        "id": "text_intro",
        "label": "Text intro"
      }
    ],
    "blocks": [
      {
        "name": "Menu items",
        "type": "menu",
        "settings": [
          {
            "type": "text",
            "id": "menu_heading",
            "label": "Menu Heading"
          },
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          }
        ]
      },
      {
        "name": "Button",
        "type": "button",
        "settings": [
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button link"
          }
        ]
      }
    ]
}
{% endschema %}