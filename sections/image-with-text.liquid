<div class="image-with-text container--narrow">
    <div style="background:{{ section.settings.bg_color }}" class="image_text {{ section.settings.image_aligment }}">
        <div class="image_wrap">
            <img src="{{ section.settings.image | img_url: 'master' }}" />
        </div>
        <div style="color:{{ section.settings.color_text }}" class="contents_wrap">
            <h3 style="color:{{ section.settings.heading_color }}">{{ section.settings.heading }}</h3>
            {{ section.settings.contents }}
            {% if section.settings.btn_text %}
              <a class="btn_primary" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
            {% endif %}
        </div>
    </div>
</div>

{% if section.settings.bg_color != '#ffffff'%}
    <style>
        #shopify-section-{{ section.id }} .image_text {
            padding: 30px 30px 60px;
            border-radius: 20px;
        }

        #shopify-section-{{ section.id }} .image_wrap img {
            border-radius: 20px;
        }
    </style>
{% endif %}


{%- schema -%}
    {
        "name": "Image with Text",
        "tag": "section",
        "class": "image-with-text_wrap",
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Backgroud Color",
                "default": "#fff"
            },
            {
                "type": "color",
                "id": "heading_color",
                "label": "Heading Color",
                "default": "#2d4d7c"
            },
            {
                "type": "color",
                "id": "color_text",
                "label": "Text Color",
                "default": "#2b2928"
            },
            {
                "type": "radio",
                "id": "image_aligment",
                "label": "Image alignment",
                "options": [
                    {
                    "value": "left",
                    "label": "Left"
                    },
                    {
                    "value": "right",
                    "label": "Right"
                    }
                ],
                "default": "right"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Text Heading"
            },
            {
                "type": "richtext",
                "id": "contents",
                "label": "Text Contents"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button link"
            }
        ],
        "presets": [
            {
                "name": "Image with Text",
                "settings": {}
            }
        ]
    }
{%- endschema -%}
