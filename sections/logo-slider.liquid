<div class="logo-slider container--narrow">
    <h2>{{ section.settings.heading }}</h2>
    <div class="logo-slider_slider">
        {% for block in section.blocks %}
            <div class="logo-slides">
                <img src="{{ block.settings.image_logo | img_url: 'master' }}" />
            </div>
        {% endfor %}
    </div>
</div>

{%- schema -%}
    {
        "name": "Logo Slider",
        "tag": "section",
        "class": "logo-slider_wrap",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            }
        ],
        "blocks": [
            {
                "type": "logo",
                "name": "Image logo",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image_logo",
                        "label": "Logo Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Logo Slider",
                "settings": {}
            }
        ]
    }
{%- endschema -%}
